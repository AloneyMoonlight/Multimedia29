<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >


    <ImageView
        android:id="@+id/imgser"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/imgactividad"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/playAudioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â¿Funciona?"
        android:layout_below="@+id/imgser"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/playVideoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:layout_below="@+id/playAudioButton"
        android:layout_centerHorizontal="true"
        />
    <VideoView
        android:id="@+id/myVideoView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playVideoButton"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/animateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animacion"
        android:layout_below="@+id/myVideoView"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/myImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/chango"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        />


</RelativeLayout>